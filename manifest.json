{
  "name": "Explain to chrome",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Use ExplainToMe to sum up hovered link",

  "background": {
    "persistent": false,
    "scripts": [
      "background/background.js"
    ]
  },

  "browser_action": {
    "default_icon": { "38": "icon.png" },
    "default_popup": "browser_action/main.html"
  },

  "content_scripts": [
    {
      "matches": [ "https://*/*", "http://*/*" ],
      "js": [
        "content_script/explainer.js",
        "content_script/popup.js",
        "content_script/positioner.js",
        "content_script/intent_loader.js",
        "content_script/utils.js",
        "content_script/main.js"
      ],
      "run_at": "document_end"
    }
  ],

  "permissions": [ 
    "https://*/*", "http://*/*",
    "activeTab",
    "storage"
  ]
}
